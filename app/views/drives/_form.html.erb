<form role="form" action="/drives" accept-charset="UTF-8" method="post">
<div class="container mt-3 mb-3">
  <div class="row justify-content-center">
    <div class="col-7">
    <form class="needs-validation" novalidate>
      <div class="form-row">
        <div class="col-md-6 mb-3">
          <label for="validationCustom01">Airport</label>
          <input type="text" class="form-control" id="validationCustom01" placeholder="Airport" name="drive[airport]" required>
          <div class="invalid-feedback">
            Please provide a valid airport.
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-6 mb-3">
        <select class="custom-select" id="customSelectValidation" for="customSelectValidation" name="drive[spot]" required>
            <option selected>Number of spots</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
            <option value="4">Four</option>
          </select>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-6 mb-3">
          <label for="validationCustom02">Date and time</label>
          <input class="form-control" type="datetime-local" id="validationCustom02" name="drive[date]" required>
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Submit form</button>
    </form>
  </div>
</div>

<%= render partial: "/drives/form_validation", :formats => [:js] %>
