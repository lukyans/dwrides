<% if !current_user.rides.any? %>
  <div class="container mt-3 mb-3">
    <div class="row justify-content-center">
      <div class="col-4">
        <%= render partial: "/rides/ride_form"%>
      </div>
    </div>
  </div>
<% else %>
  <%= render partial: "/rides/nav" %>
  <div class="container mb-5 mt-5">
    <h2>My Requested Rides</h2>
    <div class="row mt-0">
      <div class="col-9">
        <div class="row mt-0">
          <%= render partial: "/rides/requested_rides" %>
        </div>
      </div>
      <div class="d-flex justify-content-between align-items-start">
        <div class="col-12">
          <%= render partial: "/rides/ride_form" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
