<%= render partial: "/rides/nav" %>

<div class="container mb-5 mt-5">
  <h2>Available Rides</h2>
  <% if @drives.nil? %>
    <div class="text-dark h5"> You don't have available rides</div>
  <% end %>
  <div class="row mt-0">
    <% @rides.each do |ride| %>
      <% @drives.each do |drive| %>
        <% if Date.parse(ride.date.to_s) == Date.parse(drive.date.to_s) && ride.airport == drive.airport%>
          <div class="col-sm-6 col-md-5 col-lg-3 mb-5">
            <div class="card bg-light">
              <img class="card-img-top rounded img-thumbnail img-responsive" src="https://res.cloudinary.com/dbo1mgpii/image/upload/v1524945852/empire_state_building_getty_zsolt_hlinka.jpg" alt="Card image cap">
              <div class="d-flex justify-content-between align-items-start mb-0 mt-3">
                <div class="col-2">
                  <i class="material-icons text-muted mb-3">person</i>
                  <i class="material-icons text-muted mb-3">local_airport</i>
                  <i class="material-icons text-muted mb-3">group_add</i>
                  <i class="material-icons text-muted mb-3">schedule</i>
                </div>
                <div class="col-10">
                  <div class="mb-3"><%= drive.user.first_name.capitalize %> <%= drive.user.last_name.capitalize %></div>
                  <div class="mb-3"><%= drive.airport %></div>
                  <div class="mb-3"><%= drive.spot %></div>
                  <div class="mb-3">
                    <%=drive.date.strftime('%A, %b %d, %Y')%>
                    <div>
                      <%=drive.time.strftime('%I:%M %p')%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- <p class="text-muted">You have no available ride offers</p> -->
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
