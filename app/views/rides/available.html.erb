<div class="container mb-5 mt-5">
  <h2>Available Rides</h2>
  <% if @available_rides.nil? %>
    <div class="text-dark h5"> You don't have available rides</div>
  <% end %>
  <div class="row mt-0">
    <% @available_rides.each do |ride| %>
      <div class="col-sm-6 col-md-5 col-lg-3 mb-5">
        <div class="card bg-light px-2">
          <div class="px-5">
            <img class="rounded-circle mt-2 mb-2 img-thumbnail img-responsive" src="https://res.cloudinary.com/dbo1mgpii/image/upload/v1529985991/chandler.jpg" alt="Card image cap">
          </div>
          <div class="d-flex justify-content-between align-items-start mb-0 mt-3">
            <div class="col-2">
              <i class="material-icons text-muted mb-3">person</i>
              <i class="material-icons text-muted mb-3">local_airport</i>
              <i class="material-icons text-muted mb-3">group_add</i>
              <i class="material-icons text-muted mb-3">schedule</i>
            </div>
            <div class="col-10">
              <div class="mb-3">
                <%= ride.user.first_name.capitalize %> <%= ride.user.last_name.capitalize %>
              </div>
              <div class="mb-3">
                <%= ride.airport %>
              </div>
              <div class="mb-3">
                <%= ride.spot %>
              </div>
              <div class="mb-3">
                <%= ride.date.strftime('%A, %b %d, %Y') %>
                <div>
                  <%= ride.time.strftime('%I:%M %p') %>
                </div>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <%= link_to "Request", "#", class: "btn btn-primary btn-lg btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

