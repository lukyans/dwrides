<div class="container mt-3">
  <table class="table">
    <tbody>
      <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.format_time %></td>
        <td >New York, NY</td>
        <td>Lecture with Lama Ole Nydahl </td>
        <td>offered</td>
        <td><i class="material-icons text-danger mb-3" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-content="Ride is requested">notifications_active</i></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').popover();
});
</script>
