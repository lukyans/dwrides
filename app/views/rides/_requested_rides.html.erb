<% @rides.each do |ride| %>
  <div class="col-sm-6 col-md-5 col-lg-4 mb-5">
    <div class="card bg-light">
      <% if ride.airport == "JFK"%>
        <img class="card-img-top rounded img-thumbnail img-responsive" src="https://res.cloudinary.com/dbo1mgpii/image/upload/v1524945852/empire_state_building_getty_zsolt_hlinka.jpg" alt="Card image cap">
      <% elsif ride.airport == "SFO" %>
        <img class="card-img-top rounded img-thumbnail img-responsive" src="https://res.cloudinary.com/dbo1mgpii/image/upload/v1524945601/tramonto-golden-gate.jpg" alt="Card image cap">
      <% else %>
        <img class="card-img-top rounded img-thumbnail img-responsive" src="https://res.cloudinary.com/dbo1mgpii/image/upload/v1525048367/denver.jpg" alt="Card image cap">
      <% end %>

      <div class="d-flex justify-content-between align-items-start mb-0 mt-3">
        <div class="col-3">
          <%if ride.matching_with_drives? == true %>
            <i class="material-icons text-danger mb-3">notifications_active</i>
          <% end %>
            <i class="material-icons text-muted mb-3">local_airport</i>
          <% if ride.flight_number? %>
            <i class="material-icons text-muted mb-3">info</i>
          <%end%>
          <% if ride.traveling_status == "arriving" %>
            <i class="material-icons text-muted mb-3">flight_land</i>
          <% else %>
            <i class="material-icons text-muted mb-3">flight_takeoff</i>
          <% end %>
          <i class="material-icons text-muted mb-3">group_add</i>
          <i class="material-icons text-muted mb-3">schedule</i>
        </div>
        <div class="col-11">
          <%if ride.matching_with_drives? == true %>
            <div class="mb-3">
              <%= link_to "Ride availalbe", available_rides_path, class: "text-danger", style: "text-decoration: none"%>
            </div>
          <% end %>
          <div class="mb-3"><%= ride.airport %></div>
          <% if ride.flight_number? %>
            <div class="mb-3">Flight# <%= ride.flight_number %></div>
          <%end%>
          <div class="mb-3"><%= ride.traveling_status.capitalize %></div>
          <div class="mb-3"><%= ride.spot %></div>
          <div class="mb-3">
            <%= ride.date.strftime('%a %b %d, %Y') %>
            <div>
              <%= ride.time.strftime("%I:%M %p") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
